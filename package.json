    "@babel/preset-typescript": "^7.12.7",
    "@types/express": "^4.17.6",
    "@types/http-terminator": "^2.0.1",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.162",
    "@types/morgan": "^1.9.1",
    "@types/node": "^15.3.1",
    "@types/yup": "^0.29.5",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
